<resources>

    <style name="bottom_sheet_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_16</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="section_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_8</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_4</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="bottom_sheet_handler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_16</item>
    </style>

    <style name="bottom_sheet_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_margin">@dimen/margin_padding_size_16</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="filter_label" parent="bottom_sheet_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_padding_size_4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="filter_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_4</item>
    </style>

    <style name="Widget.App.Slider" parent="AppTheme">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="media_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_4</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_4</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_4</item>
    </style>

</resources>