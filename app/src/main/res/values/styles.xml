<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnSurface">@color/accent</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bgr_splash_screen</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnSurface">@color/accent</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bgr_bottom_sheet</item>
    </style>

    <style name="bottom_sheet_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_16</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="section_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_8</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_4</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="bottom_sheet_handler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_16</item>
    </style>

    <style name="bottom_sheet_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_margin">@dimen/margin_padding_size_16</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="filter_label" parent="bottom_sheet_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_padding_size_4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="filter_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_4</item>
    </style>

    <style name="Widget.App.Slider" parent="AppTheme">
        <item name="colorPrimary">@color/accent</item>
    </style>

    <style name="media_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_4</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_4</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_4</item>
    </style>

</resources>